{
  "name": "${environmentName}",
  "description": "Apache Zookeeper",
  "version": "0.0.4",
  "author": "https://github.com/niclash",
  "ssh-key": "niclas",
  "containers": [
    {
      "hostname": "zookeeper",
      "template": "debian-stretch",
      "peer-criteria": "SRV-GROUP",
      "peer-layout": "zk",
      "size": "${containerSize}",
      "port-mapping": [
      ]
    }
  ],
  "peer-layout": [
    {
      "name": "zk",
      "peer-count": "${numberOfInstances}",
      "container-per-peer": "1"
    }
  ],
  "peer-criteria": [
    {
      "name": "SRV-GROUP",
      "max-price": "25"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/niclash/subutai-bp-zookeeper/archive/master.zip",
    "ansible-playbook": "ansible.yml",
    "extra-vars": [
    ],
    "groups": [
      {
        "name": "zookeeper",
        "hostnames": [
          "zk"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "The name of the environment to create.",
      "type": "int",
      "validation": "[13579]",
      "default": "3"
    },
    "numberOfInstances": {
      "description": "Number of Zookeeper instances to be run. One instance per peer, and for consistency levels an odd number must be chosen. Allowed are one of 1,3,5,7,9",
      "type": "int",
      "validation": "[13579]",
      "default": "3"
    },
    "containerSize": {
      "description": "Container Size",
      "type": "enum",
      "default": "MEDIUM",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
    "tick_time": {
      "description": "Milliseconds per tick",
      "type": "int",
      "validation": "[0-9]+",
      "default": "2000"
    },
    "init_limit": {
      "description": "Initial Synchronization limit (in ticks)",
      "type": "int",
      "validation": "[0-9]+",
      "default": "10"
    },
    "sync_limit": {
      "description": "Synchronization Limit (in ticks)",
      "type": "int",
      "validation": "[0-9]+",
      "default": "10"
    }
  }
}

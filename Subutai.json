{
  "name": "${environmentName}",
  "description": "Apache Zookeeper",
  "version": "0.0.1",
  "author": "https://github.com/niclash",
  "ssh-key": "niclas",
  "containers": [
    {
      "hostname": "zookeeper",
      "template": "debian-stretch",
      "peer-criteria": "SRV-GROUP",
      "peer-layout": "zk",
      "size": "${containerSize}",
      "port-mapping": [
        {
          "protocol": "tcp",
          "domain": "${domain}",
          "internal-port": "",
          "external-port": "${port}"
        }
      ]
    }
  ],
  "peer-layout": [
    {
      "name": "zk",
      "peer-count": "${peerCount}",
      "container-per-peer": "1"
    }
  ],
  "peer-criteria": [
    {
      "name": "SRV-GROUP",
      "max-price": "25"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/niclash/subutai-bp-zookeeper/archive/master.zip",
    "ansible-playbook": "ansible.yml",
    "extra-vars": [
      {
        "key": "domain",
        "value": "${domain}"
      },
      {
        "key": "port",
        "value": "${port}"
      }
    ],
    "groups": [
      {
        "name": "zk",
        "hostnames": [
          "zk"
        ]
      }
    ]
  },
  "user-variables": {
    "containerSize": {
      "description": "Container Size",
      "type": "enum",
      "default": "MEDIUM",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
    "init_limit": {
      "description": "Initial Synchronization limit",
      "type": "int",
      "validation": "[0-9]+",
      "default": "10"
    },
    "sync_limit": {
      "description": "Initial Synchronization limit",
      "type": "int",
      "validation": "[0-9]+",
      "default": "10"
    },
    "tick_time": {

    }
  }
}
